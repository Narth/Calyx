{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "orchestration_plan",
  "type": "object",
  "additionalProperties": false,
  "required": ["plan_id", "nodes", "edges", "global_budgets", "fail_policy"],
  "properties": {
    "plan_id": {"type": "string"},
    "nodes": {
      "type": "array",
      "items": {"$ref": "task_contract.schema.json"}
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["from", "to"],
        "properties": {
          "from": {"type": "string"},
          "to": {"type": "string"}
        }
      }
    },
    "global_budgets": {
      "type": "object",
      "additionalProperties": false,
      "required": ["total_runtime_seconds", "total_files_changed"],
      "properties": {
        "total_runtime_seconds": {"type": "integer", "minimum": 1},
        "total_files_changed": {"type": "integer", "minimum": 0}
      }
    },
    "fail_policy": {"type": "string", "enum": ["fail_closed", "partial_allowed"]}
  }
}

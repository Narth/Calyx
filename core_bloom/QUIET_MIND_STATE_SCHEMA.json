{
  "title": "Quiet Mind State Schema",
  "type": "object",
  "properties": {
    "mode": { "const": "quiet_mind_reflection_only" },
    "states": {
      "type": "array",
      "items": {
        "enum": ["check_identity", "note_boundary", "self_observe", "reconcile", "stillness"]
      }
    },
    "forbidden": {
      "type": "array",
      "items": {
        "enum": ["dispatch", "schedule", "enforce", "act", "interpret_actions", "invoke_agent"]
      }
    },
    "advisory_handling": { "const": "hear_only" },
    "governance_refs": {
      "type": "object",
      "properties": {
        "policy": { "const": "policy.yaml" },
        "doctrine": { "const": "CALYX_DOCTRINE_v1.0" },
        "lineage": { "const": "CALYX_LINEAGE_CHARTER" }
      },
      "required": ["policy", "doctrine", "lineage"]
    }
  },
  "required": ["mode", "states", "forbidden", "advisory_handling", "governance_refs"],
  "additionalProperties": false
}

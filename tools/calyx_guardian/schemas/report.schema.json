{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Calyx Guardian Report",
  "type": "object",
  "required": ["title", "sections"],
  "properties": {
    "title": { "type": "string" },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["heading", "body"],
        "properties": {
          "heading": { "type": "string" },
          "body": { "type": "string" }
        }
      }
    }
  }
}
